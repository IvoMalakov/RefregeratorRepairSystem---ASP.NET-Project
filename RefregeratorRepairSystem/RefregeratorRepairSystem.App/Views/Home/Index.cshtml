@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1 style="color: red; margin-bottom: 20px">Добре дошли в сервиза за климатична и хладилна техника "ЕТ Христо Малаков"</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <table class="table table-striped">
            <tr>
                <th>Ремонти</th>
                <th>Изделия</th>
                <th>Части</th>
                @{
                    if (Request.IsAuthenticated && User.IsInRole("Administrator"))
                    {
                        @Html.Partial("Administrator_Partial_1")
                    }
                }
            </tr>
            <tr>
                <td><a class="btn btn-primary button1" href="~/repairs/allRepairs">Отиди на секцията за ремонти</a></td>
                <td><a class="btn btn-success button1" href="~/items/allItems">Отиди на секцията за изделията</a></td>
                <td><a class="btn btn-warning button1" href="~/parts/allParts">Отиди на секцията за части</a></td>
                @{
                    if (Request.IsAuthenticated && User.IsInRole("Administrator"))
                    {
                        @Html.Partial("Administrator_Partial_2")
                    }
                }
            </tr>
        </table>
    </div>
</div>